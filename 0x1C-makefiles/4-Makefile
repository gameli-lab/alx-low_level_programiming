CC = gcc
SRC =$(wildcard *.c)
OBJ =$(SRC:.c=.o)
NAME =school
RE = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $^ -o $@

%.o: %.c m.h
	$(CC) $(CFLAGS) -c -o $@ $<

.PHONY:all clean oclean fclean re

all:$(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all

