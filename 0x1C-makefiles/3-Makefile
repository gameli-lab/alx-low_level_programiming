CC = gcc
SRC =$(wildcard *.c)
OBJ =$(SRC:.c=.o)
NAME =school
RE = rm -f

$(NAME): $(OBJ)
	$(CC) $^ -o $@

school.o: school.c m.h
	$(CC) -c -o $@ $<

main.o: main.c m.h
	$(CC) -c -o $@ $<

.PHONY:all clean oclean fclean re

all:$(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all

